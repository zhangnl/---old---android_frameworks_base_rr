<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">

    <!-- The min animation duration for animating the task bar in. -->
    <integer name="recents_animate_task_bar_enter_duration">225</integer>
    <!-- The animation delay for animating the first task in. This should roughly be the animation
     duration of the transition in to recents. -->
    <integer name="recents_animate_task_bar_enter_delay">275</integer>
    <!-- The min animation duration for animating the task bar out. -->
    <integer name="recents_animate_task_bar_exit_duration">125</integer>


    <!-- On-The-Go -->
    <integer name="quick_settings_onthego_dialog_short_timeout">3000</integer>
    <integer name="quick_settings_onthego_dialog_long_timeout">6000</integer>
    <!-- Default value how much apps show the app screenshot on recents view entry -->
    <integer name="expanded_items_default">2</integer>

    <!-- Most Devices support LTE. Hence LTE tile is visibile. Devices like Galaxy s2, s3 require this to be false -->
    <bool name="device_supports_lte">true</bool>

    <!-- Enable Pie relocation to either stick to a physical side or default to the right side -->
    <bool name="config_relocatePieOnRotation">true</bool>

    <!-- Enable force pie centered -->
    <bool name="config_forcePieCentered">true</bool>

    <!-- Sensitivity of pie gestures controls.
         Must be minimum 1 and maximum 10 (See @EdgeServiceConstants.java).
         Default for pie is high sensitivity -->
    <integer name="pie_gesture_sensitivity">10</integer>

    <!-- Indicates wether device is a tablet or not -->
    <bool name="config_isTablet">false</bool>

    <!-- Overall pie animation speed -->
    <integer name="pie_animation_speed">275</integer>

    <!-- Maximum amount of notification icons allowed to show in PIE -->
    <integer name="pie_maximum_notifications">8</integer>

    <!-- Pie letter spacing -->
    <item name="pie_status_letter_spacing" format="float" type="integer">0.2</item>
    <item name="pie_clock_letter_spacing" format="float" type="integer">0.1</item>
</resources>
